<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BenchBase">
		<defName>TableDissection</defName>
		<label>dissection table</label>
		<description>A table for dissecting dead creatures in the name of science.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Building/Production/TableButcher</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
			<cornerTL>Damage/Corner</cornerTL>
			<cornerTR>Damage/Corner</cornerTR>
			<cornerBL>Damage/Corner</cornerBL>
			<cornerBR>Damage/Corner</cornerBR>
		  </damageData>
		</graphicData>
		<costStuffCount>75</costStuffCount>
		<costList>
			<Silver>75</Silver>
		</costList>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>3250</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Cleanliness>2</Cleanliness>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>DissectHumanRecipe</li>
			<!--li>DissectAnimal</li-->
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
			<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<!-- Component for handling the dissection -->
			<li Class="HMDissection.CompProperties_DissectionHandler">
				<compClass>HMDissection.CompDissectionHandler</compClass>
				<!-- A human body offers 4.5 nutrition, dissecting that in 1.5 ingame hourse gives this value per second -->
				<!--nutritionDissectedPerSecond>0.0714285714</nutritionDissectedPerSecond-->
				<nutritionDissectedPerSecond>5.0714285714</nutritionDissectedPerSecond>
				<!-- dissecting for 1.5 hours will yield about 1500 exp in total -->
				<baseExpPerSecond>24</baseExpPerSecond>
				<!-- 30% to 52.5% bonus for 1 to 3 diseases on the body -->
				<baseDiseasesBonusPercent>0.3</baseDiseasesBonusPercent>
				<diseaseStackLimit>3</diseaseStackLimit>
				<stackedDiseaseMultiplier>0.5</stackedDiseaseMultiplier>
				<!-- 18% to 90% malus for 1 to 5 damages on the body part -->
				<baseDamageMalusPercent>0.18</baseDamageMalusPercent>
				<damageStackLimit>5</damageStackLimit>
				<stackedDamageMultiplier>1.0</stackedDamageMultiplier>
			</li>
		</comps>
		<designationHotKey>Misc3</designationHotKey>
			<placeWorkers>
				<li>PlaceWorker_ShowFacilitiesConnections</li>
			</placeWorkers>
	</ThingDef>
	
	
<!-- ########## BASES ########## -->

	<ThingDef Name="BenchBase" ParentName="BuildingBase" Abstract="True">
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<canOverlapZones>false</canOverlapZones>
		<building>
			<workSpeedPenaltyOutdoors>true</workSpeedPenaltyOutdoors>
			<workSpeedPenaltyTemperature>true</workSpeedPenaltyTemperature>
		</building>
		<comps>
			<li>
				<compClass>CompReportWorkSpeed</compClass>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ReportWorkSpeedPenalties</li>
		</placeWorkers>
	</ThingDef>
  
	<ThingDef Name="BuildingBase" Abstract="True">
		<category>Building</category>
		<thingClass>Building</thingClass>
		<soundImpactDefault>BulletImpactMetal</soundImpactDefault>
		<selectable>true</selectable>
		<drawerType>MapMeshAndRealTime</drawerType>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<repairEffect>Repair</repairEffect>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<filthLeaving>BuildingRubble</filthLeaving>
		<statBases>
			<SellPriceFactor>0.70</SellPriceFactor>
		</statBases>
	</ThingDef>

</Defs>