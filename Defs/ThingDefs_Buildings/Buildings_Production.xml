<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BenchBase">
		<defName>TableDissection</defName>
		<label>dissection table</label>
		<description>A table for dissecting dead creatures in the name of science.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Building/DissectionTable</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,1.5)</drawSize>
			<damageData>
			<cornerTL>Damage/Corner</cornerTL>
			<cornerTR>Damage/Corner</cornerTR>
			<cornerBL>Damage/Corner</cornerBL>
			<cornerBR>Damage/Corner</cornerBR>
		  </damageData>
		</graphicData>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<costStuffCount>75</costStuffCount>
		<costList>
			<Steel>50</Steel>
		</costList>
		<stuffCategories>
			<li>Metallic</li>
			<li>Stony</li>
		</stuffCategories>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2200</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>0.7</Flammability>
			<Cleanliness>-10</Cleanliness>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>60</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<recipes>
			<li>DissectHumanRecipe</li>
			<!--li>DissectAnimal</li-->
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
			<!-- Component for handling the dissection -->
			<li Class="HMDissection.CompProperties_DissectionHandler">
				<compClass>HMDissection.CompDissectionHandler</compClass>
				<!-- A human body offers 4.5 nutrition, dissecting that in 1.5 ingame hourse gives this value per second>
				<nutritionDissectedPerSecond>0.0714285714</nutritionDissectedPerSecond-->
				<!-- dissecting for 1.5 hours will yield about 1500 exp in total>
				<baseExpPerSecond>24</baseExpPerSecond-->
				<!-- 30% to 52.5% bonus for 1 to 3 diseases on the body -->
				<baseDiseasesBonusPercent>0.3</baseDiseasesBonusPercent>
				<diseaseStackLimit>3</diseaseStackLimit>
				<stackedDiseaseMultiplier>0.5</stackedDiseaseMultiplier>
				<!-- 18% to 90% malus for 1 to 5 damages on the body part -->
				<baseDamageMalusPercent>0.18</baseDamageMalusPercent>
				<damageStackLimit>5</damageStackLimit>
				<stackedDamageMultiplier>1.0</stackedDamageMultiplier>
			</li>
		</comps>
		<designationHotKey>Misc3</designationHotKey>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites>
		  <li>DissectionResearchProj</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>
